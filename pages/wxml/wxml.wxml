<!-- wx:if的练习 -->
<text>请输入你的成绩</text>
<input text bindinput="inputEvent"></input>
<button bindtap="bin1Click" >点击查询成绩</button>
<text wx:if="{{inputTextValue>90}}">优秀</text>
<text wx:if="{{inputTextValue>70 && inputTextValue<90}}">良好</text>
<text wx:if="{{inputTextValue>60 && inputTextValue<70}}">一般</text>
<text wx:if="{{inputTextValue<60}}">很差</text>

