<view wx:for="{{10}}">{{item}}</view>



<!-- block的使用 -->

<block wx:for="{{5}}">
  <button>我是一个按钮</button>
  <text>我是一个文本</text>
  <button>我还是一个按钮 </button>
</block>


<!-- 给wx:for中的item和index起别名 -->

<view wx:for="{{movies}}" wx:for-item="movie" wx:for-index="i">{{movie}}===={{index}}</view>

<!-- wx:key的使用 -->
<view wx:for="{{movies}}" wx:key="{{item}}">{{item}}</view>

